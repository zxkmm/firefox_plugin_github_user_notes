{
  "manifest_version": 2,
  "name": "github_user_notes",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "github-user-notes@zxkmm.com"
    }
  },

  "description": "Make notes regarding specific GitHub users",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "icons": {
    "48": "icons/icon48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["user_notes.js"]
    }
  ]
}
